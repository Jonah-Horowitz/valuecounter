<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_variable_bundle_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_variable_bundle_location"
                android:textStyle="bold"
                android:textSize="@dimen/normal_font_size"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/vb_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/normal_font_size"
                android:layout_weight="1" />

            <Button
                android:id="@+id/select_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ellipsis"
                android:textSize="@dimen/normal_font_size"
                android:minWidth="0dp"
                android:layout_weight="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reset_to_default_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/reset_to_default_label"
                android:textSize="@dimen/normal_font_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_button_label"
                android:textSize="@dimen/large_font_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancel_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_button_label"
                android:textSize="@dimen/large_font_size"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>